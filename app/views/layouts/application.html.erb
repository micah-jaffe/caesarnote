<!DOCTYPE html>
<html>
  <head>
    <title>Caesarnote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
    
    <script type="text/javascript">
      window.images = {
        logo: "<%= image_url('logo.png') %>",
        avatar: "<%= image_url('avatar.png') %>",
        blue_checkmark: "<%= image_url('blue-checkmark.png') %>",
        spash_image: "<%= image_url('splash-image.png') %>",
        homepage_focus: "<%= image_url('homepage-focus.png') %>",
        homepage_stairs: "<%= image_url('homepage-stairs.png') %>",
        homepage_brain: "<%= image_url('homepage-brain.png') %>",
        homepage_devices: "<%= image_url('homepage-devices.png') %>",
        homepage_team: "<%= image_url('homepage-team.png') %>",
        sign_up_logo: "<%= image_url('sign-up-logo.png') %>",
        new_note: "<%= image_url('new-note.png') %>",
        search_image: "<%= image_url('search-image.png') %>",
        checkbox: "<%= image_url('checkbox.png') %>"
      }
    </script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdn.quilljs.com/1.2.6/quill.snow.css">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
